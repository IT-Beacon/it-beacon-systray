<Window x:Class="it_beacon_systray_app.TrayPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Topmost="True"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        Padding="10">

    <Border CornerRadius="12" BorderBrush="Gray" BorderThickness="1" Background="White" Width="240" Height="320">
        <StackPanel>
            <TextBlock Text="🚀 My Tray Popup" FontSize="16" FontWeight="Bold" />
            <Button Content="Do Something" Margin="0,10,0,0" />
        </StackPanel>
    </Border>
</Window>

<Window x:Class="it_beacon_systray.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About IT Beacon" Height="300" Width="575"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Icon="pack://application:,,,/it-beacon-common;component/Assets/Icons/beacon-blue.ico"
        Background="{DynamicResource PopupBackgroundBrush}"
        Foreground="{DynamicResource PopupForegroundBrush}">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Padding="40">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- App Icon -->
            <Image Grid.Row="0" Grid.Column="0" 
                   Source="pack://application:,,,/it-beacon-common;component/Assets/Icons/beacon-blue.ico" 
                   Width="128" Height="128" 
                   VerticalAlignment="Top" 
                   Margin="0,0,40,0"/>

            <!-- Text Content -->
            <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Top">
                <!-- App Title -->
                <TextBlock Text="IT Beacon" 
                           FontSize="32" FontWeight="Bold" 
                           Margin="0,0,0,20"/>

                <!-- Info Text -->
                <TextBlock x:Name="InfoText" 
                           TextWrapping="Wrap" 
                           FontSize="14" 
                           Opacity="0.9"/>

                <!-- Repository Link -->
                <TextBlock Margin="0,15,0,0" FontSize="14">
                    <Hyperlink x:Name="RepoLink" RequestNavigate="Hyperlink_RequestNavigate">
                        <Run x:Name="RepoLinkText" />
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</Window>
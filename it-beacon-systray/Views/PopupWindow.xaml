<Window x:Class="it_beacon_systray.Views.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="400" Height="600"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        ShowInTaskbar="False"
        Focusable="True"
        Style="{StaticResource PopupWindowStyle}">

    <!-- Rounded border defines actual background -->
    <Border CornerRadius="6"
        BorderThickness="1"
        BorderBrush="{DynamicResource PopupBorderBrush}"
        Background="{DynamicResource PopupBackgroundBrush}">
        <Grid Margin="20">
            <StackPanel>
                <TextBlock Text="IT Beacon - System Tray" 
                       FontSize="16" FontWeight="Bold" Margin="0,0,0,10"
                       Foreground="{DynamicResource PopupForegroundBrush}"/>

                <TextBlock Text="Recent Activity" 
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource PopupForegroundBrush}"/>

                <ListBox>
                    <ListBoxItem Content="Placeholder for synced file 1" 
                             Foreground="{DynamicResource PopupForegroundBrush}"/>
                    <ListBoxItem Content="Placeholder for synced file 2" 
                             Foreground="{DynamicResource PopupForegroundBrush}"/>
                    <ListBoxItem Content="Placeholder for synced file 3" 
                             Foreground="{DynamicResource PopupForegroundBrush}"/>
                </ListBox>

                <UniformGrid Rows="1" Margin="0,10,0,0">
                    <Button Content="Open Folder" Margin="5,0"/>
                    <Button Content="View Online" Margin="5,0"/>
                    <Button Content="Recycle Bin" Margin="5,0"/>
                </UniformGrid>
            </StackPanel>
        </Grid>
    </Border>
</Window>
<Window x:Class="it_beacon_systray.Views.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="400" Height="600"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        ShowInTaskbar="False"
        Focusable="True"
        Style="{StaticResource PopupWindowStyle}"
        FontFamily="Segoe UI Variable">

    <!-- Rounded border defines actual background -->
    <Border CornerRadius="6"
        BorderThickness="1"
        BorderBrush="{DynamicResource PopupBorderBrush}"
        Background="{DynamicResource PopupBackgroundBrush}">
        <Grid Margin="20">
            <!-- Define 3 rows: Header, Activity, Bottom Buttons -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- List expands to fill -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons at bottom -->
            </Grid.RowDefinitions>

            <!-- Top Section -->
            <StackPanel Grid.Row="0">
                <TextBlock Text="IT Beacon" 
                       FontSize="36" FontWeight="Bold" Margin="0,0,0,10"
                       Foreground="{DynamicResource PopupForegroundBrush}"/>

                <TextBlock Text="Recent Activity" 
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource PopupForegroundBrush}"/>
            </StackPanel>

            <!-- ListBox fills available space
            <ListBox Grid.Row="1" Margin="0,10,0,10">
                <ListBoxItem Content="Placeholder for synced file 1" 
                         Foreground="{DynamicResource PopupForegroundBrush}"/>
                <ListBoxItem Content="Placeholder for synced file 2" 
                         Foreground="{DynamicResource PopupForegroundBrush}"/>
                <ListBoxItem Content="Placeholder for synced file 3" 
                         Foreground="{DynamicResource PopupForegroundBrush}"/>
            </ListBox> -->

            <!-- Buttons aligned to bottom -->
            <UniformGrid Grid.Row="2" Rows="1" Margin="0,10,0,0" Height="60">
                <Button Margin="5,0">
                    <TextBlock Text="Company Portal" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
                <Button Margin="5,0">
                    <TextBlock Text="Sync Apps" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
                <Button Margin="5,0">
                    <TextBlock Text="Sync Compliance" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
            </UniformGrid>
        </Grid>
    </Border>
</Window>
<Window x:Class="it_beacon_systray.Views.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="400" Height="600"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        ShowInTaskbar="False"
        Focusable="True">

    <!-- Rounded border defines actual background -->
    <Border CornerRadius="12"
            BorderThickness="1"
            BorderBrush="Gray"
            Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Grid Margin="10">
            <StackPanel>
                <TextBlock Text="IT Beacon - System Tray" 
                           FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="Recent Activity" FontWeight="SemiBold"/>
                <ListBox>
                    <ListBoxItem Content="Placeholder for synced file 1"/>
                    <ListBoxItem Content="Placeholder for synced file 2"/>
                    <ListBoxItem Content="Placeholder for synced file 3"/>
                </ListBox>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Open Folder" Margin="5,0"/>
                    <Button Content="View Online" Margin="5,0"/>
                    <Button Content="Recycle Bin" Margin="5,0"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
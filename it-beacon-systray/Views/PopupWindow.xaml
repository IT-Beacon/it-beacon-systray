<Window x:Class="it_beacon_systray.Views.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="360" Height="550"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        ShowInTaskbar="False"
        Focusable="True"
        Style="{StaticResource PopupWindowStyle}">

    <!-- Rounded border that defines the actual window background and shape -->
    <Border CornerRadius="8"
            BorderThickness="1"
            BorderBrush="{DynamicResource PopupBorderBrush}"
            Background="{DynamicResource PopupBackgroundBrush}">

        <Grid Margin="15,5,15,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="60px"/>
                <!-- Row 0: Header -->
                <RowDefinition Height="*"/>
                <!-- Row 1: Main Content Area -->
                <RowDefinition Height="Auto"/>
                <!-- Row 2: Separator -->
                <RowDefinition Height="Auto"/>
                <!-- Row 3: Settings Bar -->
            </Grid.RowDefinitions>

            <!-- Row 0: Header -->
            <DockPanel Grid.Row="0" Margin="5,0,5,10" VerticalAlignment="Center">
                <!-- Avatar Icon (aligned to the right) -->
                <Image DockPanel.Dock="Right" 
                       Width="32" Height="32"
                       Source="https://picsum.photos/32 ">
                    <Image.Clip>
                        <EllipseGeometry Center="16,16" RadiusX="16" RadiusY="16"/>
                    </Image.Clip>
                </Image>

                <!-- User Name Text -->
                <TextBlock Text="CVAD Shared Student" 
                           Foreground="{DynamicResource PopupForegroundBrush}"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"/>
            </DockPanel>

            <!-- Separator between Header and Main Content -->
            <Separator Grid.Row="0" VerticalAlignment="Bottom" Margin="-15,5,-15,5" Foreground="{DynamicResource PopupBorderBrush}" Background="#3FA0A0A0"/>


            <!-- Row 1 (Main Content) and Row 2 (Footer) are currently empty and will take up the available space -->

            <!-- This border creates the tinted background for the settings row -->
            <Border Grid.Row="3" 
                    Background="{DynamicResource FooterBackgroundBrush}" 
                    Margin="-15,-5,-15,-15" 
                    CornerRadius="0,0,7,7">

                <!-- This new Grid acts as the single child for the Border -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Separator between Main Content and Settings -->
                    <Separator Grid.Row="0" VerticalAlignment="Top" Margin="0,0,0,0" Foreground="{DynamicResource PopupBorderBrush}" Background="{x:Null}"/>

                    <Grid Grid.Row="1" Margin="10,10,10,10">
                        <Button HorizontalAlignment="Right" 
                                Background="Transparent" 
                                BorderThickness="0" 
                                Cursor="Hand" 
                                Foreground="{DynamicResource PopupForegroundBrush}" 
                                Opacity="0.7"
                                Padding="5">
                            <!-- Increased FontSize and added Padding to the parent Button -->
                            <TextBlock FontFamily="Segoe Fluent Icons"
                                       Text="&#xE713;"
                                       FontSize="18" FontWeight="Regular"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       Foreground="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"/>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>




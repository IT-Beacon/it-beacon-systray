<Window x:Class="it_beacon_systray.Views.ReminderOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:it_beacon_systray.Views"
        xmlns:effects="clr-namespace:System.Windows.Media.Effects;assembly=PresentationCore"
        mc:Ignorable="d"
        Title="Restart Recommended" 
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent"
        WindowState="Maximized"
        Closing="ReminderOverlayWindow_Closing">

    <Window.Resources>
        <Style x:Key="OverlayButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PopupBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PopupForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PopupBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentHoverBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                                <Setter Property="Background" Value="{DynamicResource PopupBorderBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource PopupForegroundBrush}"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource OverlayButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AccentHoverBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource AccentHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <effects:DropShadowEffect x:Key="PopupShadowEffect" ShadowDepth="0" BlurRadius="15" Color="#000000" Opacity="0.2"/>

    </Window.Resources>

    <Grid>
        <Grid.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard RepeatBehavior="Forever">
                        <ColorAnimationUsingKeyFrames Storyboard.TargetName="AnnoyingBorder" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" Duration="0:0:14">
                            <LinearColorKeyFrame Value="Red" KeyTime="0:0:0"/>
                            <LinearColorKeyFrame Value="Orange" KeyTime="0:0:2"/>
                            <LinearColorKeyFrame Value="Yellow" KeyTime="0:0:4"/>
                            <LinearColorKeyFrame Value="Green" KeyTime="0:0:6"/>
                            <LinearColorKeyFrame Value="Blue" KeyTime="0:0:8"/>
                            <LinearColorKeyFrame Value="Indigo" KeyTime="0:0:10"/>
                            <LinearColorKeyFrame Value="Violet" KeyTime="0:0:12"/>
                            <LinearColorKeyFrame Value="Red" KeyTime="0:0:14"/>
                        </ColorAnimationUsingKeyFrames>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Grid.Triggers>

        <!-- Annoying Ring Frame - Not interactive -->
        <Border x:Name="AnnoyingBorder" BorderThickness="10" IsHitTestVisible="False">
            <Border.BorderBrush>
                <SolidColorBrush Color="Red"/>
            </Border.BorderBrush>
        </Border>

        <!-- Interactive Dialog Box -->
        <Border Background="{DynamicResource PopupBackgroundBrush}"
                BorderBrush="{DynamicResource PopupBorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Effect="{StaticResource PopupShadowEffect}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="500"
                IsHitTestVisible="True">
			<DockPanel>
				<!-- Hero Banner Section -->
				<Border x:Name="HeroBannerBorder" DockPanel.Dock="Top" Height="72" CornerRadius="7,7,0,0"> <!-- Background="{DynamicResource AccentBrush}" -->
                    <!-- Background Image will be set in code-behind based on settings -->
                </Border>

                <!-- Footer Area -->
                <Border DockPanel.Dock="Bottom" 
                        Background="{DynamicResource FooterBackgroundBrush}" 
                        CornerRadius="0,0,7,7"
                        Padding="15">
                    <Grid Height="40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" x:Name="DeferralButton" Content="Restart Later" Style="{StaticResource OverlayButtonStyle}" Click="DeferralButton_Click"/>
                        <Button Grid.Column="1" x:Name="PrimaryButton" Content="Restart Now" Style="{StaticResource PrimaryButtonStyle}" Click="PrimaryButton_Click"/>
                    </Grid>
                </Border>

                <!-- Main Content Area -->
                <Grid Margin="25,20,25,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBlock x:Name="HeaderIcon" Text="&#xE783;" FontFamily="Segoe MDL2 Assets" FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0" Foreground="{DynamicResource PopupForegroundBrush}"/>
                        <TextBlock x:Name="HeaderTitle" Text="Restart Recommended" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{DynamicResource PopupForegroundBrush}"/>
                    </StackPanel>

                    <!-- Message -->
                    <TextBlock Grid.Row="1" x:Name="ReminderMessageText" TextWrapping="Wrap" FontSize="14" Foreground="{DynamicResource PopupForegroundBrush}" Opacity="0.9">
                        Your system has been operating for an extended period without a restart. Please restart to ensure optimal performance and complete pending updates.
                        <LineBreak/><LineBreak/>
                        Contact your IT department for support if needed.
                    </TextBlock>

                    <!-- Uptime Display -->
                    <TextBlock Grid.Row="2" x:Name="UptimeDisplay" Text="System Uptime: ..." FontSize="12" Margin="0,15,0,0" Foreground="{DynamicResource PopupForegroundBrush}" Opacity="0.7"/>

                    <!-- Deference Counter -->
                    <TextBlock Grid.Row="3" x:Name="DeferenceCounterText" Text="Deferrals used: 0 / 3" FontSize="12" Margin="0,5,0,0" Foreground="{DynamicResource PopupForegroundBrush}" Opacity="0.7"/>
                </Grid>
            </DockPanel>
        </Border>
    </Grid>
</Window>
<Window x:Class="it_beacon_systray.Views.ReminderOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:it_beacon_systray.Views"
        mc:Ignorable="d"
        Title="Restart Reminder"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowState="Maximized"
        Topmost="True"
        FontFamily="Segoe UI"
        Style="{StaticResource PopupWindowStyle}"
        ShowInTaskbar="False"
        Closing="ReminderOverlayWindow_Closing">

    <Grid Background="#CC000000">

        <Border CornerRadius="8"
                BorderThickness="1"
                BorderBrush="{DynamicResource PopupBorderBrush}"
                Background="{DynamicResource PopupBackgroundBrush}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="450">
            <StackPanel Margin="25">

                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock FontFamily="Segoe Fluent Icons" Text="&#xE783;" 
                               FontSize="32" 
                               Foreground="{DynamicResource PopupForegroundBrush}" 
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Restart Recommended"
                               Foreground="{DynamicResource PopupForegroundBrush}"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               FontSize="24"
                               Margin="15,0,0,0"/>
                </StackPanel>

                <TextBlock x:Name="ReminderMessageText"
                           TextWrapping="Wrap" 
                           Foreground="{DynamicResource PopupForegroundBrush}"
                           Opacity="0.9"
                           FontSize="14"
                           Margin="0,0,0,10">
                    <!-- Text will be set from code-behind -->
                </TextBlock>

                <TextBlock x:Name="UptimeDisplay"
                           Text="System Uptime: ..."
                           Foreground="{DynamicResource PopupForegroundBrush}"
                           Opacity="0.7"
                           FontSize="12"
                           FontWeight="SemiBold"
                           Margin="0,10,0,5"/> <TextBlock x:Name="DeferenceCounterText"
                           Text="Deferrals used: 0 / 3"
                           Foreground="{DynamicResource PopupForegroundBrush}"
                           Opacity="0.9"
                           FontSize="12"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Left"
                           Margin="0,0,0,25"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="RestartLaterButton"
                            Content="Restart Later"
                            Grid.Column="0"
                            Margin="0,0,5,0"
                            Padding="10,8"
                            FontWeight="SemiBold"
                            Click="RestartLaterButton_Click"
                            Foreground="{DynamicResource PopupForegroundBrush}"
                            Style="{StaticResource IconButtonStyle}"/>

                    <Button x:Name="RestartNowButton"
                            Content="Restart Now"
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            Padding="10,8"
                            FontWeight="SemiBold"
                            Click="RestartNowButton_Click"
                            Foreground="{DynamicResource PopupForegroundBrush}"
                            Style="{StaticResource IconButtonStyle}"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>